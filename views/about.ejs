    <div class="hero-slideshow-inner">
      <div class="slide"><img src="/images/hero-illustration.svg" alt="slide-1"></div>
      <div class="slide"><img src="/images/slide2.svg" alt="slide-2"></div>
      <div class="slide"><img src="/images/hero-illustration.svg" alt="slide-3"></div>
    </div>
